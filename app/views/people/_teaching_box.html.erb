<% if box.current_phds.present? %>
  <h3><%= t ".title.current_phd" %></h3>
  <p>
    <%= box.current_phds.map{|t|
      link_to(t.name, person_url(sciper_or_name: t.sciper))}.join(", ").html_safe
    %>
  </p>
<% end %>

<% if box.past_phds_as_director.present? %>
  <h3><%= t ".title.past_phd_as_director" %></h3>
  <p><%= box.past_phds_as_director.map{ |t| link_to(t.name, t.doi_url)}.join(", ").html_safe %></p>
<% end %>

<% if box.past_phds_as_codirector.present? %>
  <h3><%= t ".title.past_phd_as_codirector" %></h3>
  <p><%= box.past_phds_as_codirector.map{ |t| link_to(t.name, t.doi_url)}.join(", ").html_safe %></p>
<% end %>

<% if box.courses.present? %>
  <h3><%= t ".title.courses" %></h3>
  <div class="list-group">
  <% box.courses.each do |c| %>
    <div class="list-group-item list-group-item-borderless">
      <h4><%= link_to_or_text(c.t_title, c.verified_edu_url!(I18n.locale)) %></h4>
      <p class="small">
        <%= c.code %><%#= c.course_instances.map{|ci| "#{ci.section}/#{ci.level}"}.join(", ") %>
      </p>
      <% if (d=c.t_description).present? %>
        <p><%= d %></p>
      <% end %>
    </div>
  <% end %>
  </div>
<% end %>
