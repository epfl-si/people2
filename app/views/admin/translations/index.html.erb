<style>
  #translations-table tr {
    position: relative;
  }
  #translations-table .tr-form {
    background-color: #fff;
    box-shadow: 0 5px 10px #0000001a;
    border: 1px solid #f00;
    width: 100%;
    position: absolute;
    top: 100%;
    left: 0;
    z-index: 1000;
    float: left;

    min-width: 10rem;
    padding: 1rem 0;
    /* margin: .125rem 0 0; */
    /* font-size: 1rem; */
    /* color: #333; */
    text-align: left;
  }
  #translations-table .tr-hidden {
    display: none;
  }
  #translations-table tr {
    cursor: pointer;
  }
</style>


<h1>Translations</h1>

<p>
<%= link_to icon_text('truck', "Apply translations"), admin_apply_translations_path, class: "btn btn-primary btn-sm", method: :get, data: {turbo_stream: true, turbo_method:'get'} %>
</p>

<table id="translations-table" class="table tr-table  table-sortable" data-tablesaw-sortable>
  <thead>
    <tr>
      <th data-tablesaw-sortable-col>Key</th>
      <th>Translations</th>
      <th data-tablesaw-sortable-col>done</th>
      <th data-tablesaw-sortable-col>Last Updated</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "translation", collection: @translations %>
  </tbody>
</table>
