<%= tag.div(class: 'col', id: dom_id(picture)) do %>
  <div class="card">
    <picture class="card-img-top">
      <%= profile_photo(picture, variant: :small) %>
    </picture>
    <div class="card-body">
      <%= link_to icon('crop'), edit_picture_path(picture),
                  class: "btn btn-primary btn-sm btn-block",
                  data: { turbo_stream: true } %>
      <%= link_to t('.set_as_profile_picture'), set_favorite_picture_profile_path(picture.profile, picture_id: picture.id),
                  class: "btn btn-primary btn-sm btn-block",
                  method: :patch, data: { turbo_stream: true, turbo_method: 'patch' } %>
      <% if picture.camipro? %>
        <span class='visibility'>
          camipro
        </span>
      <% else %>
        <%= link_to icon('trash-2'), picture_path(picture),
                    class: "btn btn-secondary btn-sm btn-block",
                    method: :delete,
                    data: { turbo_stream: true, turbo_method: 'delete', turbo_confirm: t('action.confirm') } unless picture.camipro? %>
      <% end %>
    </div>
  </div>
<% end %>
