<div class="list-group-item list-group-item-borderless" id="<%= dom_id(education) %>">
  <div class="col-md-8">
    <div class="d-md-flex">
      <h4 class="h5 mb-0 mr-1"><%= education.t_title %></h4>
      <span class="d-none d-md-block ml-1 mr-1 font-weight-bold">|</span>
      <span> <%= education.t_field %></span>
    </div>

    <p class="text-muted small mb-0">
      <%= period_text(education.year_begin, education.year_end) %>
      <%= education.school %>
      <% if education.director.present? %>
        <br>
        <%= t("educations.directedby")%>
        <%= education.director %>
      <% end %>
    </p>
  </div>
</div>
