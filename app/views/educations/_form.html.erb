<%= form_with(model: [profile, education], local: false, class: "instaform") do |form| %>
  <%= render "shared/form_errors", item: education if education.errors.any? %>

  <%= property_select(form, :category, Education.categories, required: true) %>

  <%= translated_text_fields(form, :title, required: true) %>
  <%= translated_text_fields(form, :field) %>

  <%= single_text_field(form, :director) %>
  <%= single_text_field(form, :school) %>

  <%= range_number_field(form, :year_begin, :year_end, attr: 'period', min: 1950, max: Date.today.year, required: true) %>

  <%= form_actions form, education %>
<% end %>
