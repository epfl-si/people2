<%= turbo_frame_tag :socials_index do %>
	<%= turbo_frame_tag "socials", src: nil, target: nil, data: {controller: "sortable"} do %>
	  <% @socials.each do |social| %>
		<%= render 'editable_social', social: social %>
	  <% end %>
	<% end %>
	
	<div class="list-group-item list-group-item-borderless">
	  <%= turbo_frame_tag "new_social_form" do %>
		<div class="row justify-content-center">
		  <%= link_to icon_text('add', 'plus-circle'), new_profile_social_path(@profile), class: "btn btn-secondary btn-sm", data: {turbo_stream: true} %>
		</div>
	  <% end %>
	</div>
<% end %>	
