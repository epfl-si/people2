<%= item_index_box(social, skip_edit: social.automatic?, extra_class: "d-flex align-items-start") do %>
  <h4 class="h5 mt-0 mb-0 mr-2"><%= social.tag.capitalize %></h4>
  <div>
    <% if social.value.blank? && social.automatic? && social.help_on_empty %>
      <p>
        <%= t(social.help_on_empty) %>.
        <%= link_to(t('action.more'), social.help_url, target: 'blank') if social.help_url %>
      </p>
    <% else %>
      <span> | </span>
      <%= link_to(social.value, social.url) %>
    <% end %>
  </div>
<% end %>
