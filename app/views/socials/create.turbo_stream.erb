<%= turbo_stream.append "socials" do %>
    <%= render "editable_social", social: @social, profile: @profile %>
  <% end %>
  
  <%= turbo_stream.update "new_social_form" do %>
    <div class="row justify-content-center">
      <%= link_to icon_text('add', 'plus'), new_profile_social_path(@profile), class: "btn btn-secondary btn-sm", data: { turbo_stream: true } %>
    </div>
  <% end %>
  
  <%= turbo_stream.replace "flash-messages", partial: "shared/flash" %>
  