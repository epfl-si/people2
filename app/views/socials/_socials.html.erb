<div class="footer-light-socials">
  <ul class="social-icon-list list-inline">
  <% @visible_socials.each do |s| %>
    <li>
      <% if s.img.present? %>
        <a href="<%= s.url %>" target="_blank" class="social-icon social-icon-details social-icon-discrete" rel="nofollow" title="View on <%= s.label %>">
          <%= image_tag(s.img, size: "24") %>
        </a>
      <% elsif s.icon.present? %>
        <a href="<%= s.url %>" target="_blank" class="social-icon social-icon-details social-icon-<%= s.icon %> social-icon-discrete" rel="nofollow" title="View on <%= s.label %>"><%= icon(s.icon) %>
        </a>
      <% elsif s.customicon.present? %>
        <a href="<%= s.url %>" target="_blank" class="social-icon social-icon-details social-icon-<%= s.icon %> social-icon-discrete" rel="nofollow" title="View on <%= s.label %>"><%= s.customicon.html_safe %>
        </a>
      <% else %>
        <a href="<%= s.url %>" target="_blank" class="social-icon social-icon-details social-icon-discrete" rel="nofollow" title="View on <%= s.label %>">
          <span class="user"><%= s.value %></span>
        </a>
      <% end %>
    </li>
  <% end %>
  </ul>
</div>
