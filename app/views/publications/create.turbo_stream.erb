<%= turbo_stream.append "publications" do %>
  <%= render "editable_publication", publication: @publication %> 
<% end %>

<%= turbo_stream.replace "new_publication_form" do %>
  <%= turbo_frame_tag "new_publication_form" do %>
    <div class="row justify-content-center">
	  <%= link_to icon_text('add', 'plus'), new_profile_publication_path(@profile), class: "btn btn-secondary btn-sm", data: {turbo_stream: true} %>
	</div>
  <% end %>
<% end %>

<%= turbo_stream.replace("flash-messages", partial: "shared/flash") %> 	