<%= form_with(model: [@profile, @publication], local: false, class: "instaform") do |form| %>
  <%= render "shared/form_errors", item: @publication if @publication.errors.any? %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :journal %>
    <%= form.text_field :journal, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :year %>
    <%= form.number_field :year, class: "form-control", min: 1950 ,max: DateTime.now.year  %>
  </div>

  <div class="form-group">
    <%= form.label :authors %>
    <%= form.text_field :authors, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :url %>
    <%= form.url_field :url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :audience %>
    <%= audience_selector form %>
  </div>

  <%= form_actions form, @publication %>
<% end %>
