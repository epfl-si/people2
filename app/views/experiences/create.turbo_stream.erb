<%= turbo_stream.append "experiences" do %>
<%= render "editable_experience", experience: @experience %> 
<% end %>

<%= turbo_stream.update "new_experience_form" do %>
	<div class="row justify-content-center">
		<%= link_to icon_text('plus-circle', t('add')), new_profile_experience_path(@profile), class: "btn btn-secondary btn-sm", data: {turbo_stream: true} %>
	</div>
<% end %>
<%= turbo_stream.replace("flash-messages", partial: "shared/flash") %>