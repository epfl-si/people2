<%= turbo_frame_tag :experiences_index do %>
	<%= turbo_frame_tag "experiences", src: nil, target: nil, data: {controller: "sortable"} do %>
		<% @experiences.each do |experience| %>
			<%= render 'editable_experience', experience: experience %>
		<% end %>
	<% end %>

	<div class="list-group-item list-group-item-borderless" %>
		<%= turbo_frame_tag "new_experience_form" do %>
		  <%= add_record_button(new_profile_experience_path(@profile), name: "experience") %>
		<% end %>
	</div>
<% end %>
