<% if @cv.any_publication? or @tcv.any_publication? %>
<section id='publication_section'>
<h2 class="section_title"><%= t "publications" %></h2>

<% if @tcv.infosciences.visible.present? %>
<div class="col-mt5" id="publications-infoscience">
	<% @tcv.infosciences.visible.each do |p| %>
		<div class="list-group-item list-group-item-borderless"><div class="row"><div class="col-md-12"%>
			<h4><%= p.label %></h4>
			<div><%= p.html_content.html_safe %></div>
		</div></div></div>
	<% end %>
</div>
<% end %>

<% if @cv.publications.visible.present? %>
<div class="col-mt5" id="publications-people">
	<h3><%= t "people_publications" %></h3>
	<div class="list-group">
		<table class="table">
		<% @cv.publications.visible.each do |p| %>
			<tr>
			<td>
				<b><%= p.author %></b>
				<br>
				<%= p.journal %>
			</td>
			<td style="vertical-align: top;">
				<% if p.url.present? %>
					<%= link_to p.title, p.url %>
				<% else %>
					<%= p.url %>
				<% end %>
			</td>
			</tr>
		<% end %>
		</table>
	</div>
</div>
<% end %>

<% if @tcv.publication_boxes.visible.with_content.present? %>
<div class="col-mt5" id="publications-free">
	<h3><%= t "free_publications" %></h3>
	<% @tcv.publication_boxes.visible.with_content.each do |b| %>
	  <% if b.label.present? %>
	  <h4><%= b.label %></h4>
	  <% end %>
	  <div><%= b.content %></div>
	<% end %>
</div>
<% end %>

</section>
<% end %>