<p>
<% skip_edit ||= false %>
<%= link_to icon_text('trash-2', 'action.delete'), send("#{item.class.name.downcase}_path", item), class: "btn btn-secondary btn-sm", method: :delete, data: {turbo_stream: true, turbo_method:'delete', turbo_confirm: t('action.confirm')} %>
<%= link_to icon_text('edit', 'action.edit'), send("edit_#{item.class.name.downcase}_path", item), class: "btn btn-secondary btn-sm", data: {turbo_stream: true} unless skip_edit %>
</p>
<%= render "shared/item_visibility", item: item, extra_class: nil %>
