<%= link_to icon_text('edit', 'edit'), send("edit_#{item.class.name.downcase}_path", item), class: "btn btn-secondary btn-sm", data: {turbo_stream: true} %>
<%= link_to icon_text('delete', 'trash-2'), send("#{item.class.name.downcase}_path", item), class: "btn btn-secondary btn-sm", method: :delete, data: {turbo_stream: true, turbo_method:'delete'} %>
<%= form_with(model: item, local: false) do |form| %>
  <%= form.hidden_field :visible, value: !item.visible? %>
  <%= button_tag class: "btn btn-secondary btn-sm" do %>
    <%= item.visible? ? 
      icon_text('action.make_hidden', 'eye-off') : 
      icon_text('action.make_visible', 'eye')
    %>
  <% end %>
<% end %>
