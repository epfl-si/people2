<%= form_with(
  model: item, 
  remote: true, 
  format: 'json',
  class: defined?(extra_class) ? ["visibility-radios"] + extra_class : ["visibility-radios"],
  data: {
    controller: "visibility",
    "visibility-model-value": item.class.name.underscore,
  }) do |form| %>
  <%= audience_selector(form, with_stimulus: true) %>
<% end %>
