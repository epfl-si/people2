<%= form_with(model: [profile, award], local: false, class: "instaform") do |form| %>
  <%= render "shared/form_errors", item: award if award.errors.any? %>

  <div class="form-group">
    <%= form.label Award.human_attribute_name(:title_fr) %>
    <%= form.text_field :title_fr, placeholder: "Prix Nobel" %>
  </div>
  <div class="form-group">
    <%= form.label Award.human_attribute_name(:title_en) %>
    <%= form.text_field :title_en, placeholder: "Nobel prize" %>
  </div>
  <div class="form-group">
    <%= form.label Award.human_attribute_name(:issuer) %>
    <%= form.text_field :issuer, placeholder: "The Swedish Academy" %>
  </div>
  <div class="form-group">
    <%= form.label Award.human_attribute_name(:year) %>
    <%= form.number_field :year, in: 1950..Date.today.year %>
  </div>
  <div class="form-group">
    <%= form.label Award.human_attribute_name(:audience) %>
    <%= audience_selector form %>
  </div>
  <div class="form-actions">
    <%= link_to(t('cancel'), award_path(award), class: "btn btn-secondary btn-sm btn-cancel", method: :get, data: {turbo_stream: true, turbo_method:'get'}) unless award.new_record? %>
    <%= form.submit t(award.new_record? ? 'action.create_award' :  'action.update_award'), class: "btn btn-primary btn-sm btn-confirm" %>
  </div>
<% end %>



